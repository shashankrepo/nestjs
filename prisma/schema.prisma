generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  first_name String?
  last_name String?
  email String @unique 
  hash String

  bookmarks Bookmark[]
  
   @@map("users")
}

model Bookmark {
  id String @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  title String
  description String?
  link String

  userId String
  user User @relation(fields: [userId], references: [id])

   @@map("bookmarks ")

}